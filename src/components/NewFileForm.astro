---
interface Props {
  folderId?: string;
}

const { folderId } = Astro.props;
---

<form class="file-edit-form" hx-post="/file.json">
  {folderId && <input type="hidden" name="folderId" value={folderId} />}

  <div class="file-edit-input-group">
    <label for="file-name" style="margin-right: 1rem;">File name</label>
    <input type="text" id="file-name" name="fileName" autofocus required />
  </div>

  <label for="file-body" style="display:block; margin-bottom: 1rem;">Body</label
  >
  <file-editor></file-editor>
  <div id="editor"></div>
  <input type="hidden" id="file-body" name="fileBody" />

  <div class="form-footer">
    <button class="primary-button" type="submit">Create</button>
  </div>
</form>

<style>
  .file-edit-form {
    container-type: inline-size;
  }

  .file-edit-input-group {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }

  .file-edit-input-group input {
    min-width: 0;
    max-width: 300px;
  }

  .form-footer {
    display: flex;
    justify-content: flex-end;
    margin-top: 1rem;
  }

  @container (max-width: 350px) {
    .file-edit-input-group {
      display: grid;
      grid-template-columns: 1fr;
    }

    .file-edit-input-group label {
      margin-bottom: 0.5rem;
    }
  }

  /* Mobile */
  @media (max-width: 37.5em) {
    .form-footer {
      justify-content: center;
    }

    .form-footer button {
      width: 100%;
    }
  }
</style>
