---
import { isAuthenticated } from "@/utils/auth";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const userIsAuthenticated = isAuthenticated(Astro.cookies);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Application to remind you of whatever you want, whenever you want."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      src="https://unpkg.com/htmx.org@1.9.2"
      integrity="sha384-L6OqL9pRWyyFU3+/bjdSri+iIphTN/bvYyM37tICVyOJkWZLpP2vGn6VUEXgzg6h"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <a href="/"><h1>PingMe</h1></a>
      <nav>
        <ul style="list-style: none;">
          {
            userIsAuthenticated && (
              <li>
                <button
                  hx-post="/logout.json"
                  hx-target="this"
                  hx-swap="outerHTML"
                >
                  Logout
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    --background: #efe9d9;
    --shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
    --card-background: #ddd4bc;
    --section-background: #e6e1d1;
    --black: #333333;
    --orange: #ea8958;
    --yellow: #e1b881;
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: var(--background);
  }

  header {
    background-color: #ede1ca;
    border-radius: 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 3rem;
    margin: 2rem 5rem;
    box-shadow: var(--shadow);
  }

  header h1 {
    margin: 0;
  }

  main {
    padding: 1rem 2rem;
    padding-top: 0;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  * {
    box-sizing: border-box;
  }
</style>
