---
import FileLayout from "@/layouts/FileLayout.astro";
---

<FileLayout title="New File | PingMe">
  <form hx-post="/file.json">
    <div style="display: flex; justify-content: space-between;">
      <div style="display: flex;">
        <label for="file-name" style="margin-right: 1rem;">File name</label>
        <input type="text" id="file-name" name="fileName" />
      </div>

      <button type="submit">Create</button>
    </div>

    <br />
    <br />

    <label for="file-body">Body</label>
    <file-editor></file-editor>
    <div id="editor"></div>
    <input type="hidden" id="file-body" name="fileBody" />
  </form>
</FileLayout>
