model File {
  id      Int      @id @default(autoincrement())
  name    String
  html    String
  folders Folder[]
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  files  File[]
  User   User   @relation(fields: [userId], references: [id])
  userId Int
}
